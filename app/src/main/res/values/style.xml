<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/round_button_blue</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="CustomBottomNavTextActive" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/poppin_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="CustomBottomNavTextInactive" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/poppin_medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="CustomTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppin_medium</item>
    </style>
</resources>

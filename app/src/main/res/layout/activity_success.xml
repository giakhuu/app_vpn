<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.verify.SuccessActivity">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="116dp"
        android:layout_height="141dp"
        android:layout_marginTop="104dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/success_verify" />


    <Button
        android:id="@+id/btnOkay"
        android:layout_width="321dp"
        android:layout_height="56dp"
        android:layout_marginTop="148dp"
        android:backgroundTint="@color/primaryColorVPN"
        android:fontFamily="@font/poppin_semibold"
        android:text="@string/okay"
        android:textFontWeight="800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppin_semibold"
        android:text="@string/successfully"
        android:textFontWeight="900"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnOkay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        app:layout_constraintVertical_bias="0.122" />

    <TextView
        android:fontFamily="@font/poppin_semibold"
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:text="@string/email_verify_success"
        app:layout_constraintBottom_toTopOf="@+id/btnOkay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        app:layout_constraintVertical_bias="0.136" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="222dp"
        android:layout_height="243dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/floatingribbon" />

</androidx.constraintlayout.widget.ConstraintLayout>
+                is Resource.Failure -> {
+                    btnSubmit.apply {
+                        hideProgress("Verify email")
+                        enable(false)
+                    }
+                    handleApiError(it)
+                }
+                is Resource.Loading -> {
+                    btnSubmit.onLoading()
+                }
+            }
+        }
+
+        btnSubmit.setOnClickListener {
+            val email = binding.txtForgotEmail.text?.trim().toString()
+            authViewModel.isValidEmail(email)
+        }
+    }
